.container
    .row
        .col-md-4.col-md-offset-4
            .register__row
                h1 Register!
                form(ng-submit="register.submit()")
                    input.form-control(type="email" ng-model="register.user.email")
                    input.form-control(type="password" ng-model="register.user.password")
                    button.btn.btn-success Register
                    alert(ng-if="register.error" type="register.error.type" title="register.error.title" message="register.error.message")