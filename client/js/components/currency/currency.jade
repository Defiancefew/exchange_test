.container
    h1 Server status {{currency.status}}
    button(ng-click="currency.currency()") Get Currency

    div(class="animated alert" ng-class="{'fadeIn': currency.alert.show,'fadeOut': !currency.alert.show, 'alert-hidden': !currency.alert.hasBeenShown}" ng-cloak)
        div {{currency.alert.title}}
        div {{currency.alert.message}}
