.container
    .row
        .col-md-12
            h1 Server status : {{currency.status}}
            button(ng-class="{'btn-success':!currency.subscription,'btn-danger':currency.subscription}").btn(ng-click="currency.toggle()") {{currency.message}}
            h2 Base currency: EUR
            hr
            h3 Eurofxref
            table.table.table-striped
                tr
                    th Currency
                    th Rate
                tr(ng-repeat="cur in currency.EXF")
                    td {{cur.currency}}
                    td {{cur.rate}}
            h3 Open Exchange Rates
            table.table.table-striped
                tr
                    th Currency
                    th Rate
                tr(ng-repeat="cur in currency.OER")
                    td {{cur.currency}}
                    td {{cur.rate}}
            h3 Appspot
            table.table.table-striped
                tr
                    th Currency
                    th Rate
                tr(ng-repeat="cur in currency.APP")
                    td {{cur.source}}
                    td {{cur.rate}}